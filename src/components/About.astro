---
import { siteConfig } from "../config";
---

<section id="about" class="py-8 md:py-12 px-6 md:px-12 lg:px-24 bg-gray-50">
  <div class="max-w-5xl mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
      <div class="lg:col-span-3">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
          About
        </h2>
        <div
          class="w-[50px] h-[4px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        ></div>
      </div>

      <div class="lg:col-span-9 space-y-6">
        <p class="text-base md:text-lg leading-relaxed text-gray-600">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-2">
          <div class="flex flex-wrap gap-2">
            {
              siteConfig.skills.map((skill) => (
                <span class="px-3 py-1 bg-white border border-gray-200 text-gray-700 rounded-full text-xs md:text-sm font-medium hover:border-blue-400 transition-colors">
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
