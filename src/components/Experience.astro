---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="py-12 md:py-20 px-6 md:px-12 lg:px-24 bg-gray-50">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
          <div class="lg:col-span-3">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
              News
            </h2>
            <div
              class="w-[50px] h-[4px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-9">
            <div class="space-y-8">
              {siteConfig.experience.map((exp) => (
                <div class="relative pl-6 border-l-2 border-gray-200">
                  <div
                    class="absolute -left-[7px] top-1.5 w-3 h-3 rounded-full border-2 border-white"
                    style={`background-color: ${siteConfig.accentColor}`}
                  />

                  <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-2">
                    <h3 class="text-lg font-bold text-gray-900">
                      {exp.company}
                    </h3>
                    <span class="text-xs font-mono text-gray-400">
                      {exp.dateRange}
                    </span>
                  </div>
                  
                  <p class="text-sm font-semibold mb-3" style={`color: ${siteConfig.accentColor}`}>
                    {exp.title}
                  </p>

                  <ul class="space-y-1.5">
                    {exp.bullets.map((bullet) => (
                      <li class="flex items-start text-sm text-gray-600">
                        <span class="inline-block w-1 h-1 rounded-full bg-gray-300 mt-2 mr-2 flex-shrink-0" />
                        {bullet}
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
