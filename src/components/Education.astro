---
import { siteConfig } from "../config";
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
---

{
  hasEducation && (
    <section id="education" class="py-8 md:py-12 px-6 md:px-12 lg:px-24"> <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
              Education
            </h2>
            <div
              class="w-[50px] h-[4px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6"> {siteConfig.education.map((edu) => (
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-5 md:p-6 hover:shadow-md transition-all">
                  <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between mb-3">
                    <div>
                      <h3 class="text-lg font-semibold text-gray-900">
                        {edu.degree}
                      </h3>
                      <p class="text-base font-medium" style={`color: ${siteConfig.accentColor}`}>
                        {edu.school}
                      </p>
                    </div>
                    <span class="text-xs sm:text-sm text-gray-400 mt-1 sm:mt-0 font-mono">
                      {edu.dateRange}
                    </span>
                  </div>

                  <ul class="space-y-1.5">
                    {edu.achievements.map((achievement) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1 h-1 rounded-full bg-gray-300 mt-2.5 mr-3 flex-shrink-0" />
                        <span class="text-sm md:text-base text-gray-600" set:html={achievement} />
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
