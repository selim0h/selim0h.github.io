---
import { siteConfig } from "../config";
---

<section class="py-10 md:py-16 bg-white"> <div class="max-w-5xl mx-auto px-4"> <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      
      <div class="w-40 md:w-52 flex-shrink-0">
        <img 
          src="/profile.jpg" 
          alt={siteConfig.name}
          class="w-full h-auto rounded-2xl shadow-sm" 
        />
      </div>

      <div class="flex-1 text-center md:text-left">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-3 tracking-tight md:whitespace-nowrap">
          Hello! I'm {siteConfig.name} 
          <span class="block md:inline text-lg md:text-2xl font-light text-gray-400 md:ml-2" style="font-family: 'Pretendard', 'Noto Sans KR', sans-serif;">
            (오세림)
          </span>
        </h1>
        
        <p class="text-lg md:text-xl text-blue-600 font-medium mb-3">
          {siteConfig.title}
        </p>
        
        <p class="text-gray-600 text-base md:text-lg mb-6 leading-relaxed max-w-2xl" set:html={siteConfig.description} />

        <div class="flex flex-wrap justify-center md:justify-start gap-3 items-center">
          <a href={`mailto:${siteConfig.social.email}`} class="flex items-center gap-2 text-gray-700 hover:text-blue-600 transition-colors border border-gray-200 px-3 py-1.5 rounded-full text-xs md:text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
            {siteConfig.social.email}
          </a>

          <a href="/resume.pdf" target="_blank" class="bg-gray-900 text-white px-5 py-1.5 rounded-full text-sm font-medium hover:bg-gray-800 transition-colors">
            CV
          </a>

          <a href="https://medium.com/@selim0h" target="_blank" class="text-gray-700 hover:text-blue-600 transition-colors border border-gray-200 px-4 py-1.5 rounded-full text-sm">
             Blog
          </a>
          
          <a href={siteConfig.social.github} target="_blank" class="text-gray-400 hover:text-gray-900 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5" /></svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
