---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="py-8 md:py-12 px-6 md:px-12 lg:px-24">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
          <div class="lg:col-span-3">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">
              Research
            </h2>
            <div
              class="w-[50px] h-[4px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-9">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block p-5 bg-gray-50 rounded-xl border border-gray-100 transition-all duration-300 h-full ${
                        project.link
                          ? "hover:bg-white hover:shadow-md hover:border-blue-200 hover:-translate-y-1"
                          : ""
                      }`}
                    >
                      <div class="space-y-3">
                        <div class="flex justify-between items-start">
                          <span class="text-[10px] font-mono font-bold uppercase tracking-widest text-gray-400">
                            Project 0{index + 1}
                          </span>
                          {project.link && (
                            <svg class="w-4 h-4 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                          )}
                        </div>
                        
                        <h3 class="text-lg font-bold text-gray-900">
                          {project.name}
                        </h3>

                        <p class="text-sm text-gray-600 leading-relaxed line-clamp-3">
                          {project.description}
                        </p>

                        {project.skills && (
                          <div class="flex flex-wrap gap-1.5 pt-2">
                            {project.skills.map((skill) => (
                              <span class="px-2 py-0.5 bg-gray-200/50 text-gray-500 rounded text-[10px] font-semibold uppercase">
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
