---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="py-8 md:py-12 px-6 md:px-12 lg:px-24">
      <div class="max-w-5xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
          <div class="lg:col-span-3">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900">Research</h2>
            <div class="w-[50px] h-[4px] mt-2 rounded-full" style={`background-color: ${siteConfig.accentColor}`} />
          </div>

          <div class="lg:col-span-9">
            <div class="space-y-6">
              {siteConfig.projects.map((project, index) => (
                <div class="group relative bg-white rounded-xl border border-gray-100 p-6 hover:shadow-md transition-all">
                  <div class="flex flex-col gap-3">
                    <div class="flex justify-between items-start">
                      <span class="text-[10px] font-mono font-bold uppercase tracking-widest text-gray-400">
                        Project 0{index + 1}
                      </span>
                      {project.link && (
                        <a href={project.link} target="_blank" class="text-blue-600 hover:text-blue-800 flex items-center gap-1 text-sm font-medium">
                          Link <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" /></svg>
                        </a>
                      )}
                    </div>
                    
                    <h3 class="text-xl font-bold text-gray-900">{project.name}</h3>

                    <p class="text-base text-gray-600 leading-relaxed">
                      {project.description}
                    </p>

                    {project.skills && (
                      <div class="flex flex-wrap gap-2 pt-2">
                        {project.skills.map((skill) => (
                          <span class="px-2.5 py-1 bg-gray-100 text-gray-500 rounded text-xs font-semibold uppercase">
                            {skill}
                          </span>
                        ))}
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
